<AnchorPane fx:id="helpPane" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HelpController">
    <MenuBar layoutX="-1.0" prefHeight="26.0" prefWidth="600.0" styleClass="menuBar" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <menus>
            <Menu fx:id="fileMenu" mnemonicParsing="false" styleClass="menu" text="File">
                <items>
                    <MenuItem mnemonicParsing="false" text="New" />
                    <MenuItem mnemonicParsing="false" text="Save" />
                    <CheckMenuItem mnemonicParsing="false" text="Autosave" />
                    <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem mnemonicParsing="false" onAction="#onLogoutMenuClick" styleClass="menuItem" text="Close" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" styleClass="menu" text="Scenes">
                <items>
                    <MenuItem fx:id="menuItemLogin" mnemonicParsing="false" onAction="#getToLoadProject" styleClass="menuItem" text="Load Project" />
                    <MenuItem fx:id="menuItemConfig" mnemonicParsing="false" onAction="#getToConfig" styleClass="menuItem" text="Configurations" />
                    <MenuItem fx:id="menuItemResults" mnemonicParsing="false" onAction="#getToResults" styleClass="menuItem" text="Results" />
                    <MenuItem fx:id="menuItemScene4" mnemonicParsing="false" onAction="#getToScene4" styleClass="menuItem" text="Scene 4" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" styleClass="menu" text="Help">
                <items>
                    <MenuItem fx:id="menuItemAbout" mnemonicParsing="false" onAction="#getToAbout" styleClass="menuItem" text="About" />
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <TextArea id="myTextArea" fx:id="myTextArea" editable="false" layoutX="496.0" layoutY="76.0" prefHeight="300.0" prefWidth="641.0" styleClass="text-area" stylesheets="@../css/style.css" wrapText="true">
        <cursor>
            <Cursor fx:constant="DEFAULT" />
        </cursor>
    </TextArea>
    <RadioButton fx:id="radioBtn1" layoutX="46.0" layoutY="80.0" mnemonicParsing="false" onAction="#displayText" text="RadioButton">
        <toggleGroup>
            <ToggleGroup fx:id="helpText" />
        </toggleGroup>
    </RadioButton>
    <RadioButton fx:id="radioBtn2" layoutX="46.0" layoutY="130.0" mnemonicParsing="false" onAction="#displayText" text="RadioButton" toggleGroup="$helpText" />
    <RadioButton fx:id="radioBtn3" layoutX="46.0" layoutY="180.0" mnemonicParsing="false" onAction="#displayText" text="RadioButton" toggleGroup="$helpText" />
    <RadioButton fx:id="radioBtn4" layoutX="46.0" layoutY="230.0" mnemonicParsing="false" onAction="#displayText" text="RadioButton" toggleGroup="$helpText" />
   <ScrollPane layoutX="496.0" layoutY="442.0" prefHeight="250.0" prefWidth="642.0">
      <content>
          <TextFlow fx:id="myTextFlow" prefHeight="200.0" prefWidth="632.0" textAlignment="JUSTIFY">
            <children>
                <Text fx:id="myText" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="JUSTIFY" wrappingWidth="560.0">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Text>
            </children>
            <padding>
               <Insets bottom="7.0" left="5.0" right="7.0" top="10.0" />
            </padding>
         </TextFlow>
      </content>
   </ScrollPane>
</AnchorPane>
